.container {
  padding: 20rpx;
}

.form-item {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 10rpx;
}

.form-item text {
  display: block;
  margin-bottom: 15rpx;
  color: #666;
  font-size: 28rpx;
}

input,
textarea {
  width: 100%;
  height: 80rpx;
  padding: 10rpx;
  font-size: 28rpx;
}

.save-btn {
  margin-top: 50rpx;
  background: #07c160;
  color: white;
  border-radius: 50rpx;
}