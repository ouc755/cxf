/* pages/detail/detail.wxss */
.background-image {
  position: fixed;
  top: 0;
  left: 0;
  z-index: -1;
  width: 100vw;
  height: 100vh;
}

.container {
  padding: 400rpx 30rpx 30rpx;
  background: #fff;
  border-radius: 12rpx;
  margin: 20rpx;
  min-height: 100vh;
}

.toy-img {
  width: 100%;
  height: 360rpx;
  border-radius: 8rpx;
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  right: 20rpx;
}
.toy-info {
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}
.toy-name {
  font-size: 36rpx;
  font-weight: bold;
}
.toy-price {
  color: #ff4400;
  font-size: 32rpx;
  margin: 10rpx 0;
}
.toy-size {
  color: #1890ff;
  font-size: 28rpx;
  margin: 15rpx 0;
}

.size-select {
  margin: 20rpx 0;
}

.size-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 15rpx;
}

.size-btn {
  flex: 1;
  padding: 16rpx 0;
  background: #f5f5f5;
  color: #666;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
}

.size-btn.active {
  background: #e6f7ff;
  color: #1890ff;
  border-color: #1890ff;
}
.toy-desc {
  color: #888;
  font-size: 26rpx;
  margin: 10rpx 0 20rpx;
}
.buy-btn {
  margin-top: 40rpx;
  background: #ff4400;
  color: #fff;
  font-size: 32rpx;
  border-radius: 8rpx;
  padding: 20rpx 0;
}
