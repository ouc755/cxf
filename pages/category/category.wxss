.container {
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 加载中 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #2979ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading text {
  color: #999;
  font-size: 28rpx;
}

/* 商品列表 */
.product-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.product-card {
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.product-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.product-image {
  width: 100%;
  height: 320rpx;
  object-fit: contain;
  display: block;
  background: #f8f8f8;
}

.product-info {
  padding: 14rpx 14rpx 12rpx 14rpx;
  display: flex;
  flex-direction: column;
  flex: 1;
}

.product-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #222;
  margin-bottom: 8rpx;
  line-height: 1.2;
  min-height: 2.2em;
}

.product-meta {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.product-price {
  color: #ff4d4f;
  font-size: 30rpx;
  font-weight: bold;
}

.product-btn {
  display: flex;
  justify-content: center;
  margin-top: 6rpx;
  padding-bottom: 14rpx;
}

.buy-btn {
  background: #2979ff;
  color: #fff;
  font-size: 26rpx;
  border-radius: 8rpx;
  padding: 12rpx 0;
  width: 92%;
  font-weight: 500;
  border: none;
}

.buy-btn-login {
  background: #ff9500;
}

.buy-btn:active {
  opacity: 0.9;
}

/* 空状态提示 */
.empty-category {
  grid-column: 1 / -1;
  padding: 60rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.back-home {
  padding: 16rpx 40rpx;
  background: #2979ff;
  color: #fff;
  font-size: 28rpx;
  border-radius: 30rpx;
}

.back-home:active {
  opacity: 0.9;
}

/* 用户信息栏 */
.user-bar {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.user-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-nickname {
  font-size: 28rpx;
  color: #333;
} 