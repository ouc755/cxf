.settings-container {
  min-height: 100vh;
  background-color: #f7f7f7;
  padding: 24rpx;
}

.settings-list {
  background-color: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.settings-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1px solid #f5f5f5;
  transition: background-color 0.3s;
}

.settings-item:active {
  background-color: #f9f9f9;
}

.settings-item:last-child {
  border-bottom: none;
}

.item-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.item-left text {
  font-size: 32rpx;
  color: #333;
  font-weight: 400;
}

.item-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.item-desc {
  font-size: 28rpx;
  color: #999;
}

.version {
  font-size: 28rpx;
  color: #999;
} 