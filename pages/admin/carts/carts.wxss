/* pages/admin/carts/carts.wxss */
.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.carts-list {
  width: 100%;
}

.cart-item {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.user-info {
  display: flex;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.nickname {
  font-size: 28rpx;
  color: #333;
}

.cart-content {
  padding-top: 20rpx;
}

.products {
  margin-bottom: 20rpx;
}

.product {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.product:last-child {
  border-bottom: none;
}

.product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.product-price {
  font-size: 26rpx;
  color: #e4393c;
}

.product-quantity {
  font-size: 26rpx;
  color: #999;
}

.cart-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.update-time {
  font-size: 24rpx;
  color: #999;
}

.total-price {
  font-size: 28rpx;
  color: #e4393c;
  font-weight: bold;
}

.empty-tip {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

.loading {
  text-align: center;
  padding: 30rpx 0;
  color: #666;
  font-size: 26rpx;
}

.load-all {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 26rpx;
}