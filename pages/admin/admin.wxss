.admin-container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 标签页样式 */
.tabs {
  display: flex;
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #07c160;
  font-weight: bold;
}

.tab.active:after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40%;
  height: 4rpx;
  background: #07c160;
  border-radius: 2rpx;
}

/* 商品列表样式 */
.product-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 10rpx;
}

/* 添加商品按钮 */
.add-product {
  grid-column: 1 / -1;
  background: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  text-align: center;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-product .icon {
  font-size: 40rpx;
  margin-right: 10rpx;
  color: #07c160;
}

.add-product text {
  color: #07c160;
  font-size: 32rpx;
}

/* 商品项样式 */
.product-item {
  background: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}

.product-image {
  width: 100%;
  height: 300rpx;
  background: #f8f8f8;
  object-fit: cover;
}

.product-info {
  padding: 20rpx;
  flex: 1;
}

.product-name {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  color: #333;
}

.product-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 15rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 规格信息 */
.product-specs {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  font-size: 26rpx;
}

.spec-label {
  color: #666;
  margin-right: 10rpx;
  min-width: 80rpx;
}

.spec-value {
  color: #333;
  flex: 1;
}

/* 价格组合 */
.product-prices {
  margin-top: 15rpx;
}

.price-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8rpx 0;
  font-size: 26rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.price-item:last-child {
  border-bottom: none;
}

.combination {
  color: #666;
}

.price {
  color: #ff6b81;
  font-weight: bold;
}

/* 单一价格 */
.product-price {
  font-size: 32rpx;
  color: #ff6b81;
  font-weight: bold;
  margin-top: 15rpx;
  display: block;
}

.actions {
  display: flex;
  padding: 20rpx;
  gap: 20rpx;
  border-top: 2rpx solid #f5f5f5;
  background: #fff;
}

.btn {
  flex: 1;
  padding: 15rpx 0;
  text-align: center;
  border-radius: 8rpx;
  font-size: 26rpx;
  border: none;
}

.btn-primary {
  background: #07c160;
  color: #fff;
}

.btn-danger {
  background: #ff6b81;
  color: #fff;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 40rpx;
  color: #666;
  font-size: 28rpx;
}

/* 购物车列表样式 */
.cart-list {
  background: #fff;
  border-radius: 10rpx;
  margin-top: 20rpx;
  padding: 20rpx;
}

.cart-item {
  border-bottom: 2rpx solid #f5f5f5;
  padding: 20rpx 0;
}

.cart-item:last-child {
  border-bottom: none;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.nickname {
  font-size: 28rpx;
  color: #333;
}

.products {
  margin: 20rpx 0;
}

.product {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.product:last-child {
  margin-bottom: 0;
}

.product .product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.product .product-info {
  flex: 1;
}

.product .product-name {
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.product .product-price {
  font-size: 28rpx;
  color: #ff6b81;
}

.product .product-quantity {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
} 