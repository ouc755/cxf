.login-container {
  min-height: 100vh;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 40rpx;
}

.login-header {
  margin-top: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo {
  width: 180rpx;
  height: 180rpx;
  border-radius: 90rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 40rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 80rpx;
}

.login-content {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.login-btn {
  width: 100% !important;
  height: 88rpx;
  line-height: 88rpx;
  background: #07c160 !important;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-bottom: 40rpx;
  font-weight: normal !important;
  letter-spacing: 2rpx;
}

.login-btn::after {
  border: none;
}

.login-btn[loading] {
  opacity: 0.8;
  background: #07c160 !important;
  color: #fff !important;
}

.phone-btn {
  width: 100% !important;
  height: 88rpx;
  line-height: 88rpx;
  background: #fff;
  color: #07c160;
  font-size: 32rpx;
  border-radius: 44rpx;
  border: 2rpx solid #07c160;
}

.login-footer {
  position: fixed;
  bottom: 40rpx;
  left: 0;
  right: 0;
  text-align: center;
}

.tips {
  text-align: center;
  font-size: 26rpx;
  color: #999999;
  margin-top: 40rpx;
  line-height: 1.6;
}

.version {
  position: fixed;
  bottom: 40rpx;
  left: 0;
  right: 0;
  text-align: center;
  font-size: 24rpx;
  color: #cccccc;
}

.agreement-link {
  display: inline;
  font-size: 24rpx;
  color: #07c160;
  margin-left: 10rpx;
} 