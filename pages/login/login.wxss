.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx;
  min-height: 100vh;
  background-color: #f8f8f8;
}

.app-logo {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 30rpx;
}

.app-name {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 80rpx;
}

.login-form {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  background: #fff;
  border-radius: 20rpx;
  padding: 50rpx 0;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 40rpx;
  border: 2rpx solid #eee;
}

.user-details {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.avatar-btn {
  width: 280rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  margin: 30rpx 0;
  background: #f0f0f0;
  color: #333;
  border-radius: 44rpx;
}

.nickname-input {
  width: 80%;
  height: 96rpx;
  border: 1rpx solid #ddd;
  border-radius: 48rpx;
  padding: 0 40rpx;
  margin: 30rpx 0;
  font-size: 32rpx;
  text-align: center;
}

.login-btn {
  width: 80%;
  height: 100rpx;
  line-height: 100rpx;
  background: linear-gradient(to right, #07c160, #1aad19);
  color: #fff;
  font-size: 36rpx;
  border-radius: 50rpx;
  margin-top: 40rpx;
  box-shadow: 0 8rpx 15rpx rgba(7, 193, 96, 0.2);
}

.login-btn[disabled] {
  background: #9be0b8;
  color: #fff;
  box-shadow: none;
} 