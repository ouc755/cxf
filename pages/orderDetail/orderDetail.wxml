<view class="container">
  <view class="order-header">
    <text class="order-number">订单号：{{order.orderNumber}}</text>
    <text class="status {{order.status}}">{{order.statusText}}</text>
  </view>
  
  <view class="order-info">
    <text class="info-title">订单时间：{{order.date}}</text>
    <text class="info-title">物流公司：{{order.shippingCompany || '暂无'}}</text>
    <text class="info-title">运单号码：{{order.trackingNumber || '暂无'}}</text>
  </view>

  <view class="goods-list">
    <view class="section-title">商品清单</view>
    <block wx:for="{{order.items}}" wx:key="name">
      <view class="goods-item">
        <text class="goods-name">{{item.name}}</text>
        <text class="goods-price">￥{{item.price}} ×{{item.quantity}}</text>
      </view>
    </block>
  </view>

  <view class="total-box">
    <text>实付金额：</text>
    <text class="total-price">￥{{order.total}}</text>
  </view>
</view>