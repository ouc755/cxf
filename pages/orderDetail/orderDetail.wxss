.container {
  padding: 20rpx;
  background: #f8f8f8;
  min-height: 100vh;
}

.order-header {
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.order-number {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 15rpx;
}

.status {
  float: right;
  font-size: 26rpx;
  padding: 8rpx 15rpx;
  border-radius: 6rpx;
}

.status.completed {
  background: #e8f5e9;
  color: #4caf50;
}

.order-info {
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.info-title {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.goods-list {
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.goods-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.total-box {
  background: white;
  padding: 30rpx;
  position: fixed;
  bottom: 0;
  width: 100%;
  left: 0;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.total-price {
  color: #ff6a3d;
  font-size: 36rpx;
  margin-left: 20rpx;
}
