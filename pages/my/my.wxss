.container {
  min-height: 100vh;
  background: #f7f7f7;
}

.user-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.login-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.login-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.login-btn {
  width: 300rpx !important;
  margin-top: 20rpx !important;
}

.user-info {
  display: flex;
  align-items: center;
}

.info {
  margin-left: 30rpx;
}

.nickname {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.logout-btn {
  margin-top: 20rpx;
  padding: 12rpx 30rpx;
  font-size: 24rpx;
  color: #666;
  background: #f5f5f5;
  border-radius: 30rpx;
}

.menu-list {
  background: #fff;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.menu-item text {
  font-size: 28rpx;
  color: #333;
}

.arrow {
  color: #ccc;
} 