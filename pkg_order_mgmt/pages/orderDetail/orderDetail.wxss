.container {
  min-height: 100vh;
  background: #f8f8f8;
  padding-bottom: 120rpx;
}

.order-header {
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.order-number {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 15rpx;
}

.status {
  float: right;
  font-size: 26rpx;
  padding: 8rpx 15rpx;
  border-radius: 6rpx;
}

.status.completed {
  background: #e8f5e9;
  color: #4caf50;
}

.order-info {
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.info-title {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.goods-list {
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.goods-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.total-box {
  background: white;
  padding: 30rpx;
  position: fixed;
  bottom: 0;
  width: 100%;
  left: 0;
}

.total-price {
  color: #ff6a3d;
  font-size: 36rpx;
  margin-left: 20rpx;
}

/* 订单容器 */
.container {
  padding: 120rpx 32rpx 32rpx;
  background: #f8fafc;
  min-height: 100vh;
}

/* 状态卡片增强 */
.order-status {
  background: #3B82F6;
  padding: 40rpx 32rpx;
  color: #fff;
}

.status-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.status-text {
  font-size: 36rpx;
  font-weight: bold;
}

.status-icon {
  width: 48rpx;
  height: 48rpx;
}

.status-progress {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
}

.progress-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.progress-dot {
  width: 16rpx;
  height: 16rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 50%;
  margin-bottom: 12rpx;
}

.progress-item.active .progress-dot {
  background: #fff;
}

.progress-item text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.progress-line {
  flex: 1;
  height: 2rpx;
  background: rgba(255, 255, 255, 0.3);
  margin: 0 20rpx;
  position: relative;
  top: -8rpx;
}

/* 收货地址卡片 */
.address-card {
  background: #fff;
  padding: 32rpx;
  margin: 20rpx;
  border-radius: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.address-info {
  flex: 1;
}

.contact-info {
  margin-bottom: 12rpx;
}

.name {
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.phone {
  color: #666;
}

.address {
  font-size: 28rpx;
  color: #666;
  line-height: 1.4;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 20rpx;
}

/* 商品卡片 */
.goods-card {
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 32rpx;
}

.goods-item {
  display: flex;
  margin-bottom: 32rpx;
}

.goods-item:last-child {
  margin-bottom: 0;
}

.goods-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
}

.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-name {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.goods-spec {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.price-quantity {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price {
  color: #ff6a3d;
  font-size: 32rpx;
  font-weight: bold;
}

.quantity {
  color: #999;
  font-size: 24rpx;
}

/* 订单信息 */
.order-info {
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 32rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.label {
  color: #666;
  font-size: 28rpx;
}

.value {
  color: #333;
  font-size: 28rpx;
}

/* 价格明细 */
.price-detail {
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 32rpx;
}

.price-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 24rpx;
  font-size: 28rpx;
  color: #666;
}

.price-item.total {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 2rpx solid #f5f5f5;
  font-size: 32rpx;
  color: #333;
}

.discount {
  color: #ff6a3d;
}

.total-price {
  color: #ff6a3d;
  font-weight: bold;
}

/* 底部操作栏 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 32rpx;
  display: flex;
  justify-content: flex-end;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.action-btn {
  margin-left: 20rpx;
  padding: 0 40rpx;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 36rpx;
  font-size: 28rpx;
}

.action-btn.cancel {
  background: #f5f5f5;
  color: #666;
}

.action-btn.after-sale {
  background: #3B82F6;
  color: #fff;
}