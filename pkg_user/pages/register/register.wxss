/* pages/register/register.wxss */
.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
  padding: 40rpx;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 60rpx 0;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.form-container {
  width: 100%;
  margin-top: 40rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 16rpx;
}

.input {
  width: 100%;
  height: 88rpx;
  background: #f8f8f8;
  border-radius: 44rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #333333;
  box-sizing: border-box;
}

.placeholder {
  color: #999999;
}

.code-input {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.code-input .input {
  flex: 1;
}

.code-btn {
  width: 200rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: #ff6b6b;
  color: #ffffff;
  font-size: 26rpx;
  border-radius: 44rpx;
  padding: 0;
}

.code-btn.disabled {
  background: #cccccc;
  color: #ffffff;
}

.register-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #ff6b6b;
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-top: 60rpx;
  text-align: center;
}

.register-btn.loading {
  opacity: 0.8;
}

.actions {
  display: flex;
  justify-content: center;
  margin-top: 30rpx;
}

.login-link {
  font-size: 26rpx;
  color: #666666;
}

.footer {
  position: fixed;
  bottom: 40rpx;
  left: 0;
  right: 0;
  text-align: center;
  font-size: 24rpx;
  color: #999999;
}

.agreement {
  color: #999999;
}

.link {
  color: #ff6b6b;
  display: inline;
}